#mysql 설정
spring.datasource.driver-class-name=com.mysql.cj.jdbc.Driver
#d source url
spring.datasource.url=jdbc:mysql://127.0.0.1:3306/eng_db?useSSL=false&useUnicode=true&allowPublicKeyRetrieval=true
#db username
spring.datasource.username=icebear
#db password
spring.datasource.password=1234

#true 설정시 jpa 쿼리문 확인 가능
spring.jpa.show-sql=true
#DDL(create, alter, drop) 정의시 DB 고유 기능을 사용 가능
spring.jpa.hibernate.ddl-auto=update
#JPA의 구현체인 hIBERNATE가 동작하면서 발행한 SQL의 가독성을 높여줌
spring.jpa.properties.hibernate.format_sql=true

#자동 빌드
spring.devtools.livereload.enabled=true
spring.freemarker.cache=false
spring.thymeleaf.cache=false
spring.devtools.restart.enabled=true